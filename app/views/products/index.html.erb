
<%= render partial: 'products/hero' %>
<section>
        <div class="container bg-primary-gradient py-5">
            <div class="row" id="menurow">
                <div class="col-md-8 col-xl-6 text-center mx-auto">
                    <p class="fw-bold text-success mb-2">Nos pizzas</p>
                    <h3 class="fw-bold">Elles n'attendent que vous.</h3>
                </div>
            </div>
             <div class="row mx-auto  mx-auto">
                    <% @all_products.each do |product|  %>
                  <div class="col-sm  mx-auto"id="cardrow">
                      <div class="card border-dark text-center">
                          <div class="card-body"id="productcard">
                          <%= image_tag "cardimgtest.png", id:"cardimg"%>
                            <h5 class="card-title" id="cardtitle"><%=product.title%></h5>
                            <small id="cardcatchphrase"> <%= product.catchphrase%> </small>
                            <p id="cardprice">Prix <%= product.price%> â‚¬</p>
                            <%= link_to 'Voir', product_path(product), class:"btn btn-success", id:"cardseebtn" %>
                            <%= link_to "Ajouter au panier", cart_products_path(product_id:product),class:"btn btn-success", id:"cardaddtocartbtn", type:"button", method: :post %>
                         </div>
                        </div>
                     </div>
                 <% end %>
             </div>         
        </div>
</section>
