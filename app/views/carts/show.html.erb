<h1>Carts#show</h1>
<p>Find me in app/views/carts/show.html.erb</p>

<p><strong>Le cart sélectionné est :</strong> <%= @cart_to_show %>.</p>

<p><strong>Il contient les produits suivants :</strong></p>

<ul>
  <% @cart_to_show.cart_products.each do |cart_product| %>
    <li>
      <%= cart_product.product %> : <%= cart_product.product.title %>. <strong>Prix : <%= cart_product.product.price %> €</strong> 
    </li>
  <% end %>
</ul>

<p><strong>TOTAL A PAYER : <%= @total_to_pay %> €</strong></p>

<!-- Suppression du lien de confirmation de commande pour proposer directeent le paiement CB -->
<%#= link_to 'Confirmer commande', new_order_path, class:"btn btn-primary" %>

<%= form_tag orders_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <!--<label class="amount">-->
      <!--<span>paiement de : <%#= @order_to_pay.total_amount %> €</span>-->
    <!--</label>-->
  </article>
  <br/>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
  data-description="Achat d'un produit"
  data-amount=<%= @stripe_amount %>
  data-currency="eur"
  data-locale="auto"></script>
<% end %>
