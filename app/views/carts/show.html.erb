<div class="cartcontent">
  <div class="insidecartcontent">
    <p><strong>Votre panier contient les produits suivants :</strong></p>
      <% @cart_to_show.cart_products.each do |cart_product| %>
        <div class="container">
          <div class="row">

            <div class="col">
              <%= cart_product.product.title %>
              <br>
              Qté = <%= cart_product.quantity %>
            </div>

            <div class="col">
              Prix : <%= cart_product.product.price %> €
              </div>

            <div class="col">
              <%= link_to "retirer du panier", cart_product, method: :delete, class: "btn btn-outline-danger btn-sm" %>
            </div>
            <div class="col">
            <!-- A IMPLEMENTER SEMAINE PROCHAINE ! <%= link_to "Ajouter +1", cart_product_path(product_id:cart_product), method: :put, class: "btn btn-outline-success btn-sm" %> -->
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>

<div>
  <p><strong>TOTAL A PAYER : <%= @total_to_pay %> €</strong></p>
  <% if current_user.firstname == "" && current_user.lastname == "" && current_user.phone == "" %>
    <p>Profil incomplet, merci de <%= link_to "compléter votre profil", edit_user_path(@current_user.id) %> pour pouvoir finaliser votre commande :</p>
  <% else %>
    <%= link_to 'Payer ma Commande', orders_path(total:@total_to_pay), method: :post, class: "btn btn-primary", remote: true %>
  <% end %>
</div>